@model DB.Model.Court.CourtGeneralInformation
<h2>Списание</h2>
<div class="row">
    <div class="col-md-4">
        <label class="col-sm-12 col-form-label">Документы подготовлены к списанию (да/нет):</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtWriteOff.DocumentsPreparedWriteOff, new { @readonly = "readonly", @dicId = "12", @class = "form-control DictionaryAutoComplete", @Value = Model.CourtWriteOff.DocumentsPreparedWriteOff })
        </div>
        <label class="col-sm-12 col-form-label">Сумма списания всего:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtWriteOff.SumWriteOff, new { @disabled = "disabled", @class = "form-control", @type = "number", @step = "0.01", @Value = Model.CourtWriteOff.SumWriteOff })
        </div>
        <label class="col-sm-12 col-form-label">Сумма списания ГП:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtWriteOff.SumGp, new { @readonly = "readonly", @class = "form-control", @type = "number", @step = "0.01", @Value = Model.CourtWriteOff.SumGp })
        </div>
        <label class="col-sm-12 col-form-label">Сумма списания пени:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtWriteOff.SumPeny, new { @readonly = "readonly", @class = "form-control", @type = "number", @step = "0.01", @Value = Model.CourtWriteOff.SumPeny })
        </div>
        <label class="col-sm-12 col-form-label">Сумма списания ОД:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtWriteOff.SumOd, new { @readonly = "readonly", @class = "form-control", @type = "number", @step = "0.01", @Value = Model.CourtWriteOff.SumOd })
        </div>
    </div>
    <div class="col-md-4">
        <label class="col-sm-12 col-form-label">Начальный период списания:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtWriteOff.DateWriteOffBegin, new
            {
                @type = "Date",
                @readonly = "readonly",
                @class = "form-control",
           @Value = (Model.CourtWriteOff.DateWriteOffBegin.HasValue ? Model.CourtWriteOff.DateWriteOffBegin.Value.ToString("yyyy-MM-dd") : string.Empty)
       })
        </div>
        <label class="col-sm-12 col-form-label">Конечный период списания:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtWriteOff.DateWriteOffEnd, new
            {
                @type = "Date",
                @readonly = "readonly",
                @class = "form-control",
           @Value = (Model.CourtWriteOff.DateWriteOffEnd.HasValue ? Model.CourtWriteOff.DateWriteOffEnd.Value.ToString("yyyy-MM-dd") : string.Empty)
       })
        </div>
        <label class="col-sm-12 col-form-label">Статус списания:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtWriteOff.WriteOffStatus, new { @readonly = "readonly", @dicId = "11", @class = "form-control DictionaryAutoComplete", @Value = Model.CourtWriteOff.WriteOffStatus })
        </div>
        <label class="col-sm-12 col-form-label">Дата списания:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtWriteOff.DateWriteOff, new
            {
                @type = "Date",
                @readonly = "readonly",
                @class = "form-control",
           @Value = (Model.CourtWriteOff.DateWriteOff.HasValue ? Model.CourtWriteOff.DateWriteOff.Value.ToString("yyyy-MM-dd") : string.Empty)
       })
        </div>
        <label class="col-sm-12 col-form-label">Примечание:</label>
        <div class="col-sm-8">
            @Html.TextAreaFor(m => m.CourtWriteOff.Comment, new { @readonly = "readonly", @class = "form-control", @Value = Model.CourtWriteOff.Comment })
        </div>
    </div>
</div>

<script>
    $(document).ready(function (e) {
        $("#CourtWriteOff_SumGp").keyup(function () {
            let sum = +$("#CourtWriteOff_SumGp").val() + +$("#CourtWriteOff_SumPeny").val() + +$("#CourtWriteOff_SumOd").val();
            $("#CourtWriteOff_SumWriteOff").val(sum.toFixed(2))
        })
        $("#CourtWriteOff_SumPeny").keyup(function () {
            let sum = +$("#CourtWriteOff_SumGp").val() + +$("#CourtWriteOff_SumPeny").val() + +$("#CourtWriteOff_SumOd").val();
            $("#CourtWriteOff_SumWriteOff").val(sum.toFixed(2))
        })
        $("#CourtWriteOff_SumOd").keyup(function () {
            let sum = +$("#CourtWriteOff_SumGp").val() + +$("#CourtWriteOff_SumPeny").val() + +$("#CourtWriteOff_SumOd").val();
            $("#CourtWriteOff_SumWriteOff").val(sum.toFixed(2))
        })
    })
</script>

