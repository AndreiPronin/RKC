@model IEnumerable<DB.Model.DPUSummaryHouses>

<table class="table table-bordered">
    <thead>
        <tr class="info">
            <th scope="col">cadr</th>
            <th scope="col">улица</th>
            <th scope="col">дом</th>
            <th scope="col">Общая стоимость ОДПУ</th>
            <th scope="col">Общая стоимость ОДПУ для жилых помещений</th>
            <th scope="col">Общая стоимость ОДПУ для нежилых помещений</th>
            <th scope="col">Общая площадь МКД</th>
            <th scope="col">Общая площадь жилых помещений МКД</th>
            <th scope="col">Общая площадь нежилых помещений МКД</th>
            <th scope="col">Дата передачи в РБР</th>
            <th scope="col">Период выставления</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Item in Model)
        {
            <tr class="info">
                <th>@Item.Cadr</th>
                <th>@Item.Street</th>
                <th>@Item.Home</th>
                <th>@Item.TotalCostODPU</th>
                <th>@Item.TotalCostOdpuResidentialPremises</th>
                <th>@Item.TotalCostOdpuNonResidentialPremises</th>
                <th>@Item.TotalAreaMKD</th>
                <th>@Item.TotalAreaMKDResidentialPremises</th>
                <th>@Item.TotalAreaMKDNonResidentialPremises</th>
                <th>@Item.DateTransferRBR</th>
                <th>@Item.PeriodExhibit</th>
            </tr>
        }
        

    </tbody>
</table>

