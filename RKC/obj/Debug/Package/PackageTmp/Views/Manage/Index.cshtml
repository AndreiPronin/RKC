@model RKC.Models.IndexViewModel
@{
    ViewBag.Title = "Управление";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Изменение параметров учетной записи</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Пароль:</dt>
        <dd>

            @if (Model.HasPassword)
            {
                @Html.ActionLink("Смена пароля", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Создать", "SetPassword")
            }

        </dd>

    </dl>
    @if (User.IsInRole("Admin"))
    {
<dl class="dl-horizontal">
    <dt>Установить блокировку для:</dt>
    <dd>
        <a href="/Account/LockAction?Page=DetailedInformIPU">Страница детальной информации</a>
    </dd>
    <dd>
        Статус блокировки @if (ViewBag.StatusDetailedInformIPU)
        {

            <p class="NullOrEmpty">Заблокирована</p>}
        else { <p class="">Не заблокирована</p>}
    </dd>
</dl>
    }
</div>
