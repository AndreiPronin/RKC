
@{
    ViewBag.Title = "View";
}

<h2 class="text-center" style="color:red;" >@ViewBag.Message</h2>
<h1 class="text-center">Через <span class="seconds">3</span> секунд страница закроется </h1>
<script>
    $(document).ready(function () {
        var _Seconds = $('.seconds').text(),
            int;
        int = setInterval(function () { // запускаем интервал
            if (_Seconds > 0) {
                _Seconds--; // вычитаем 1
                $('.seconds').text(_Seconds); // выводим получившееся значение в блок
            } else {
                clearInterval(int); // очищаем интервал, чтобы он не продолжал работу при _Seconds = 0
                window.close();
            }
        }, 1000);
        

    })
</script>

