<footer style="" class="navbar-fixed-bottom">
    <hr />
    <p style="color:white">&copy; @DateTime.Now.Year - ООО Расчетно-биллинговые решения</p>
</footer>
<script>
    $(document).ready(function () {
        $('#Img').fadeIn(5000);
        var i = 0;
        var txt = 'ООО Расчетно-биллинговые решения'; /* Текст */
        var speed = 100; /* Скорость/длительность эффекта в миллисекундах */
        typeWriter();
        function typeWriter() {
            if (i < txt.length) {
                document.getElementById("animationText").innerHTML += txt.charAt(i);
                i++;
                setTimeout(typeWriter, speed);
            }
        }


    })


</script>

