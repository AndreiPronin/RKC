@model DB.Model.Court.CourtGeneralInformation
<div class="row">
    <div class="col-md-5">
        <h2 class="">Общая информация</h2>
    </div>
    <div class="col-md-7">
        @*<a href="/PersonalData/PaymentHistoryView?FullLic=@Model.Lic" class="btn btn-success text-center" target="_blank">Отчет по оплатам</a>*@
    </div>

</div>

@Html.TextBoxFor(m => m.Id, new { @hidden = "hidden", @Value = Model.Id })
@Html.TextBoxFor(m => m.DateCreate, new { @hidden = "hidden", @Value = Model.DateCreate })
<div class="row">
    <div class="col-md-4">
        <label class="col-sm-12 col-form-label">№ л/с:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Lic, new { @disabled = "disabled", @class = "form-control", @Value = Model.Lic })
        </div>
        <label class="col-sm-12 col-form-label">Регион:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.City, new { @readonly = "readonly", @class = "form-control", @Value = Model.Region })
        </div>
        <label class="col-sm-12 col-form-label">Город/нас.пункт:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Region, new { @readonly = "readonly", @class = "form-control", @Value = Model.City })
        </div>
        <label class="col-sm-12 col-form-label">Улица:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Street, new { @readonly = "readonly", @class = "form-control", @Value = Model.Street })
        </div>
        <label class="col-sm-12 col-form-label">Дом:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Home, new { @readonly = "readonly", @class = "form-control", @Value = Model.Home })
        </div>
        <label class="col-sm-12 col-form-label">Кв:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Flat, new { @readonly = "readonly", @class = "form-control", @Value = Model.Flat })
        </div>
        <label class="col-sm-12 col-form-label">Вид собственности:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.ShareOfOwnership, new { @readonly = "readonly", @dicId = "21", @class = "form-control DictionaryAutoComplete", @Value = Model.ShareOfOwnership })
        </div>
        <label class="col-sm-12 col-form-label">Доля в праве:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.ShareInRight, new { @disabled = "disabled", @readonly = "readonly", @class = "form-control", @Value = Model.ShareInRight, type = "number", min = "0", max = "999.999", step = "0.001" })
        </div>

        <label class="col-sm-12 col-form-label">Солидарно с:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.InSolidarityWith, new { @disabled = "disabled", @readonly = "readonly", @class = "form-control", @Value = Model.InSolidarityWith })
        </div>
        <label class="col-sm-12 col-form-label">Кадастровый номер:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CadastrNumber, new { @readonly = "readonly", @class = "form-control", @Value = Model.CadastrNumber })
        </div>
        <label class="col-sm-12 col-form-label">Адрес регистрации:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.AddressRegister, new { @readonly = "readonly", @class = "form-control", @Value = Model.AddressRegister })
        </div>
    </div>
    <div class="col-md-4">
        <label class="col-sm-12 col-form-label">Фамилия должника</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.LastName, new { @readonly = "readonly", @class = "form-control", @Value = Model.LastName })
        </div>
        <label class="col-sm-12 col-form-label">Имя должника</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.FirstName, new { @readonly = "readonly", @class = "form-control", @Value = Model.FirstName })
        </div>
        <label class="col-sm-12 col-form-label">Отчество должника</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Surname, new { @readonly = "readonly", @class = "form-control", @Value = Model.Surname })
        </div>
        <label class="col-sm-12 col-form-label">Пол:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Floor, new { @readonly = "readonly", @dicId = "13", @class = "form-control DictionaryAutoComplete", @Value = Model.Floor })
        </div>
        <label class="col-sm-12 col-form-label">Дата рождения:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.DateBirthday, new { @type = "date", @readonly = "readonly", @class = "form-control", @Value = Model.DateBirthday })
        </div>
        <label class="col-sm-12 col-form-label">Место рождения:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.PlaceBirth, new { @readonly = "readonly", @class = "form-control", @Value = Model.PlaceBirth })
        </div>
        <label class="col-sm-12 col-form-label">Паспорт серия:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.PasportSeria, new { @readonly = "readonly", @class = "form-control", @Value = Model.PasportSeria })
        </div>
        <label class="col-sm-12 col-form-label">Паспорт Номер:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.PasportNumber, new { @readonly = "readonly", @class = "form-control", @Value = Model.PasportNumber })
        </div>
        <label class="col-sm-12 col-form-label">Паспорт дата выдачи</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.PasportDate, new { @type = "date", @readonly = "readonly", @class = "form-control", @Value = Model.PasportDate })
        </div>
        <label class="col-sm-12 col-form-label">Паспорт кем выдан:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.PasportIssue, new { @readonly = "readonly", @class = "form-control", @Value = Model.PasportIssue })
        </div>
        <label class="col-sm-12 col-form-label">ИНН:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Inn, new { @readonly = "readonly", @class = "form-control", @Value = Model.Inn })
        </div>
        <label class="col-sm-12 col-form-label">СНИЛС:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Snils, new { @readonly = "readonly", @class = "form-control", @Value = Model.Snils })
        </div>
        <label class="col-sm-12 col-form-label">Дата смерти:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.DateDeath, new
         {
             @type = "date",
             @readonly = "readonly",
             @class = "form-control",
          @Value = (Model.DateDeath.HasValue ? Model.DateDeath.Value.ToString("yyyy-MM-dd") : string.Empty)
          })
        </div>
        <label class="col-sm-12 col-form-label">Пенсионер:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.Pensioner, new { @readonly = "readonly", @dicId = "12", @class = "form-control DictionaryAutoComplete", @Value = Model.Pensioner })
        </div>
    </div>
    <div class="col-md-4">
        <label class="col-sm-12 col-form-label">Исключение из ДСР</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.ExclusionMailing, new { @readonly = "readonly", @dicId = "12", @class = "form-control DictionaryAutoComplete", @Value = Model.ExclusionMailing })
        </div>
        <label class="col-sm-12 col-form-label">Причины исключения из ДСР:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.ReasonsExclusionMailing, new {@disabled = "disabled", @readonly = "readonly", @dicId = "18", @class = "form-control DictionaryAutoComplete", @Value = Model.ReasonsExclusionMailing })
        </div>
        <label class="col-sm-12 col-form-label">Исключение из судебной работы:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.ExclusionCourtWork, new { @readonly = "readonly", @dicId = "12", @class = "form-control DictionaryAutoComplete", @Value = Model.ExclusionCourtWork })
        </div>
        <label class="col-sm-12 col-form-label">Причины исключения из судебной работы:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.ReasonsCourtWork, new { @disabled = "disabled", @readonly = "readonly", @dicId = "19", @class = "form-control DictionaryAutoComplete", @Value = Model.ReasonsCourtWork })
        </div>
        <label class="col-sm-12 col-form-label">Примечание:</label>
        <div class="col-sm-8">
            @Html.TextAreaFor(m => m.Comment, new { @readonly = "readonly", @class = "form-control", @Value = Model.Comment })
        </div>
    </div>
</div>
<script>
    $(document).ready(function (e) {
        $("#ExclusionMailing").bind('keyup change blur focus', function () {
            let Value = $("#ExclusionMailing").val();
            $("#Save").removeClass("hidden");
            console.log(Value);
            $("#ReasonsExclusionMailing").attr("disabled", true);
            removeErrorText($("#ReasonsExclusionMailing"));
            removeError($("#ReasonsExclusionMailing"));
            if (Value == "Да") {
                $("#ReasonsExclusionMailing").attr("disabled", false);
                $("#Save").addClass("hidden");
                callErrorText($("#ReasonsExclusionMailing"), "Введите причину исключения");
                callError($("#ReasonsExclusionMailing"));
            }
        })
        $("#ReasonsExclusionMailing").bind('keyup change blur focus', function () {
            let Value = $("#ReasonsExclusionMailing").val();
            $("#Save").removeClass("hidden");
            removeErrorText($("#ReasonsExclusionMailing"));
            removeError($("#ReasonsExclusionMailing"));
            if (Value == "") {
                $("#ReasonsExclusionMailing").attr("disabled", false);
                $("#Save").addClass("hidden");
                callErrorText($("#ReasonsExclusionMailing"), "Введите причину исключения");
                callError($("#ReasonsExclusionMailing"));
            }
        })
        $("#ExclusionCourtWork").bind('keyup change blur focus', function () {
            let Value = $("#ExclusionCourtWork").val();
            $("#Save").removeClass("hidden");
            console.log(Value);
            $("#ReasonsCourtWork").attr("disabled", true);
            removeErrorText($("#ReasonsCourtWork"));
            removeError($("#ReasonsCourtWork"));
            if (Value == "Да") {
                $("#ReasonsCourtWork").attr("disabled", false);
                $("#Save").addClass("hidden");
                callErrorText($("#ReasonsCourtWork"), "Введите причину исключения судебной рассылки");
                callError($("#ReasonsCourtWork"));
            }
        })
        $("#ReasonsCourtWork").bind('keyup change blur focus', function () {
            let Value = $("#ReasonsCourtWork").val();
            $("#Save").removeClass("hidden");
            removeErrorText($("#ReasonsCourtWork"));
            removeError($("#ReasonsCourtWork"));
            if (Value == "") {
                $("#ReasonsCourtWork").attr("disabled", false);
                $("#Save").addClass("hidden");
                callErrorText($("#ReasonsCourtWork"), "Введите причину исключения");
                callError($("#ReasonsCourtWork"));
            }
        })
    })
</script>
