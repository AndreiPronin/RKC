@model IEnumerable<DB.DataBase.Log>
@{ int i = 0;}
<div class="modal fade" id="HistoryEditModal" tabindex="-1" role="dialog" aria-labelledby="HistoryEditLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">История изменения</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @if (Model.Count() > 0)
            {
            <div class="modal-body">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Пользователь</th>
                            <th scope="col">Описание</th>
                            <th scope="col">Дата</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var Items in Model)
                        {
                        <tr>
                            <td>@Items.UserName</td>
                            <td style="white-space: break-spaces ">@Items.Description</td>
                            <td>@Items.DateTime</td>
                        </tr>
                        }



                    </tbody>
                </table>
            </div>
            }
            else
            {
                 <div class="modal-body"><p>Ничего не найдено!</p></div>
            }
          <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
</div>

