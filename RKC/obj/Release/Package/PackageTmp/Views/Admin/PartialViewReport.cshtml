
@{
    ViewBag.Title = "PartialViewReport";
}

<div class="container">
    @using (Html.BeginForm("UploadFile", "Counter", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        if (User.IsInRole("Admin"))
        {
            <div style="margin-top:30px;" class="row">
                <div class="col-md-4">
                    @Html.TextBox("file", "", new { type = "file", @class = "form-control" })
                </div>
                <div class="col-md-4">
                    <select id="Bank" name="Bank" class="form-control" aria-label="Default select">
                        <option selected>Выберите банк</option>
                        <option value="1">Какой то банк</option>
                        <option value="2">Почта</option>
                        <option value="3">ВТБ</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="submit" class="btn btn-success" value="Загрузить" />
                </div>
            </div>
        }
    }
    
    @if (User.IsInRole("Admin"))
    {
        <div style="margin-top:30px;" class="row">
            <div class="col-md-4">
                <select id="FileType" name="FileType" class="form-control" aria-label="Default select">
                    <option selected>Выберите отчет</option>
                    <option value="1">ИПУ_отчет из counters</option>
                    <option value="2">ИПУ_отчет из lic</option>
                    <option value="3">ИПУ_отчет общий</option>
                    <option value="4">Реестр ИПУ</option>
                    <option value="5">Ebd xml</option>
                </select>
            </div>
            <div class="col-md-2">
                <input name="UserCreateExcelFile" id="UserCreateExcelFile" value="@User.Identity.Name" hidden class="form-control hidden" />
                <input type="submit" id="CreateExcelFile" class="btn btn-success" value="Скачать" />
            </div>
        </div>
    }
</div>
<br />
<div class="progress hidden">
    <div class="progress-bar  " id="LoadingProcent" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
</div>
<div id="ResultCreateExcelFile" class="hidden" >
    <textarea id="msgCreateExcelFile" style="width: 100%;" class="form-control" ></textarea>
</div>

<script>
    $(document).ready(function (e) {
        $("#CreateExcelFile").click(function () {
            location.href = '/Counter/Export?typeFile=' + $("#FileType").val();
        })
        $(".loader").addClass("hidden");
        var i = 0;
        ///Обновление файлов
        $("#UploadFilePU").click(function (e) {
            $("#LoadingProcent").parent().removeClass("hidden");
            var Cashe = $('#User').val();
            var intervalID = setInterval(function () {
                $.ajax({
                    url: '/Counter/GetProgress?Name=' + Cashe,
                    success: function (data) {
                        i = data;
                    },
                    error: function () {
                        i = "Что то пошло не так. Обратитесь к администратору! Это ошибка связана с показанием процентов загрузки";
                    }
                });
                // Добавляем ноль в начало цифры, которые до 10
                $("#LoadingProcent").css('width', i + '%');
                $("#LoadingProcent").text(i + '%');
                if (i === 100) { clearInterval(intervalID); $("#LoadingProcent").parent().addClass("hidden"); }
            }, 3000);
        })
        ///Создание файлов
        $("#CreateExcelFile").click(function (e) {
            $("#ResultCreateExcelFile").removeClass("hidden");
            $("#msgCreateExcelFile").empty();
            var Cashe = $('#UserCreateExcelFile').val();
            var intervalID = setInterval(function () {
                $.ajax({
                    url: '/Counter/GetProgress?Name=' + Cashe,
                    success: function (data) {
                        i = data;
                    },
                    error: function () {
                        i = "Что то пошло не так. Обратитесь к администратору!";
                    }
                });
                // Добавляем ноль в начало цифры, которые до 10
                $('#msgCreateExcelFile').val(i);
                if (i === "Ожидайте... Идет скачивание файла.") { clearInterval(intervalID); }
            }, 3000);
        })
    });
</script>
