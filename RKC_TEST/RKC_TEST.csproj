    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.5.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RKC\RKC.csproj" />
    <ProjectReference Include="..\WordGenerator\WordGenerator.csproj" />
  </ItemGroup>

