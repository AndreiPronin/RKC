@model DB.Model.Court.CourtGeneralInformation
<h2>Госпошлина</h2>
<div class="row">
    <div class="col-md-4">
        <label class="col-sm-12 col-form-label">Дата направления на возврат г/п в ФНС:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtStateDuty.DateSendOnReturnFNS, new { @type = "Date", @readonly = "readonly", @class = "form-control", 
           @Value = (Model.CourtStateDuty.DateSendOnReturnFNS.HasValue ? Model.CourtStateDuty.DateSendOnReturnFNS.Value.ToString("yyyy-MM-dd") : string.Empty)
       })
        </div>
        <label class="col-sm-12 col-form-label">Дата возврата заявления ФНС:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtStateDuty.DateReturnFNS, new { @type = "Date", @readonly = "readonly", @class = "form-control", 
           @Value = (Model.CourtStateDuty.DateReturnFNS.HasValue ? Model.CourtStateDuty.DateReturnFNS.Value.ToString("yyyy-MM-dd") : string.Empty)
       })
        </div>
        <label class="col-sm-12 col-form-label">Причина возврата заявления ФНС:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtStateDuty.ReasonReturn, new { @readonly = "readonly", @class = "form-control", @Value = Model.CourtStateDuty.ReasonReturn })
        </div>
        <label class="col-sm-12 col-form-label">Дата направления реестра на г/п в бухгалтерию:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtStateDuty.DateSendReestr, new { @type = "Date", @readonly = "readonly", @class = "form-control", 
           @Value = (Model.CourtStateDuty.DateSendReestr.HasValue ? Model.CourtStateDuty.DateSendReestr.Value.ToString("yyyy-MM-dd") : string.Empty)
       })
        </div>
        <label class="col-sm-12 col-form-label">Примечание:</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.CourtStateDuty.Comment, new { @readonly = "readonly", @class = "form-control", @Value = Model.CourtStateDuty.Comment })
        </div>
    </div>
</div>

